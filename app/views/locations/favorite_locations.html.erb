<div class="container mx-auto px-28 py-2">
  <h1 class="text-3xl font-bold mb-8">Favorite Locations</h1>
  <% if @locations.count > 0 %>
    <ul class="list-disc pl-4">
      <% @locations.each do |location| %>
        <li class="flex justify-between items-center mb-4">
          <span>
            <%= link_to "#{location.name}, #{location.country_code}", view_weather_path(location: location.name, country_code: location.country_code), class: "text-blue-500 hover:underline" %>
          </span>
          <span>
            <%= form_with(url: remove_from_favorites_path(location_id: location.id), method: :delete) do |f| %>
              <%= f.submit "Remove from favorites", class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
            <% end %>
          </span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-500">User has no favorite locations.</p>
  <% end %>
</div>
