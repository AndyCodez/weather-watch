<div class="weather flex items-center bg-blue-500 p-4 rounded-lg mx-auto my-4 hover:bg-indigo-500">
  <%= image_tag "https://openweathermap.org/img/wn/#{weather["icon"]}.png", class: "w-20 h-20"%>
  <div class="ml-4">
    <div class="text-white font-bold text-lg capitalize"><%= weather["description"] %></div>
    <span class="text-white text-sm"><%= date_time.strftime('%b %d, %Y') %></span>
    <span class="text-white text-sm"><%= date_time.strftime("%H:%M") %></span>
  </div>
</div>
